{
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": "src",
        "module": "esnext",
        "moduleResolution": "bundler",
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"],
            "@elizaos/*": ["../vendor/eliza/packages/*"],
            "@prism-sh/*": ["../packages/*"]
        }
    },
    "ts-node": {
        "experimentalSpecifierResolution": "node",
        "transpileOnly": true,
        "esm": true
    },
    "include": [
        "src/**/*.ts"
    ]
}